@{
    ViewBag.Title = "poslovno_savjetovanje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Usluge
                    <small>Poslovno savjetovanje</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Početna", "Index")
                    </li>
                    <li class="active">Usluge</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Image Header -->
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="~/pics/poslovno-savjetovanje.jpg" alt="">
            </div>
        </div>
        <!-- /.row -->
        <!-- Service List -->
        <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Popis usluga</h2>
            </div>
            <div class="col-md-4">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Izrada poslovnih planova, studija izvodivosti, investicijskih studija.</p>
                    </div>
                </div>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Priprema projekata za financiranje iz EU fondova.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Organizacja i upravljanje poslovanjem:</p>
                        <p>	- u fazi osnivanja</p>
                        <p>	- u fazi rasta</p>
                        <p>	- nastankom poteškoća u poslovanju</p>
                    </div>
                </div>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Procjena vrijednosti poslovnih subjekata.</p>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Osnivanje, podjela, pripajanje i druge statusne promjene poslovnih sustava.</p>
                    </div>
                </div>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Predstečajne nagodbe, stečajevi i likvidacija poslovnih subjekata.</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Točka pokrića 2015</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
