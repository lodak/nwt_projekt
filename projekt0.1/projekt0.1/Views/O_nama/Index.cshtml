<!-- Page Content -->

<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">O nama</h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("O nama", "Index", "O_nama")
                </li>
                <li class="active">Točka pokrića</li>
            </ol>
        </div>
    </div>


    <ul class="nav nav-tabs">
        <li class="active">@Html.ActionLink("Točka pokrića", "Index", "O_nama")</li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Usluge
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Knjigovodstvo", "knjigovodstvo", "O_nama")</li>
                <li>@Html.ActionLink("Poslovno savjetovanje", "poslovno_savjetovanje", "O_nama")</li>
