@{
    ViewBag.Title = "poslovno_savjetovanje";
    Layout = "~/Views/Shared/_LayoutOnama.cshtml";
}



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/business-frontpage.css" rel="stylesheet" />
<link href="~/Content/footer.css" rel="stylesheet" />
<!-- Custom CSS -->
<script src="~/js/jquery-1.10.2.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Page Content -->
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">O nama</h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("O nama", "Index")
                </li>
                <li class="active">Usluge - Poslovno savjetovanje</li>
            </ol>
        </div>
    </div>


    <ul class="nav nav-tabs">
        <li>@Html.ActionLink("Točka pokrića", "Index")</li>
        <li class="dropdown active">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Usluge
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Knjigovodstvo", "knjigovodstvo")</li>
                <li>@Html.ActionLink("Poslovno savjetovanje", "poslovno_savjetovanje")</li>
                <li>@Html.ActionLink("Turizam", "turizam", "turizam")</li>
            </ul>
        </li>
        <li>@Html.ActionLink("Naš tim", "Tim")</li>
        <li>@Html.ActionLink("Naši partneri", "Partneri")</li>
    </ul>
</div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" style="margin-top:50px" src="~/pics/poslovno-savjetovanje.jpg" alt="">
            </div>
        </div>
        <!-- /.row -->
        <!-- Service List -->
        <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Popis usluga</h2>
            </div>
            <div class="col-md-4">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Izrada poslovnih planova, studija izvodivosti, investicijskih studija.</p>
                    </div>
                </div>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Priprema projekata za financiranje iz EU fondova.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Organizacja i upravljanje poslovanjem:</p>
                        <p>	- u fazi osnivanja</p>
                        <p>	- u fazi rasta</p>
                        <p>	- nastankom poteškoća u poslovanju</p>
                    </div>
                </div>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Procjena vrijednosti poslovnih subjekata.</p>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Osnivanje, podjela, pripajanje i druge statusne promjene poslovnih sustava.</p>
                    </div>
                </div>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"></h4>
                        <p>Predstečajne nagodbe, stečajevi i likvidacija poslovnih subjekata.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- /.row -->
<hr>

    <!-- /.container -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
